{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["bun"],

		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": false,
		"noEmit": true,

		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
